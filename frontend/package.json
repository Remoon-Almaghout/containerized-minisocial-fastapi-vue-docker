    "@vitejs/plugin-vue": "^6.0.4",
    "autoprefixer": "^10.4.24",
    "cross-env": "^10.1.0",
    "postcss": "^8.5.6",
    "prettier": "3.8.1",
    "tailwindcss": "^3.4.19",
    "vite": "^7.3.1",
    "vite-plugin-vue-devtools": "^8.0.6"
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
